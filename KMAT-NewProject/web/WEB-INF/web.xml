<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- START: Footer -->
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <!--<url-pattern>/WEB-INF/view/user/*</url-pattern> -->
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <url-pattern>/SignUp.jsp</url-pattern>            
            <url-pattern>/LoginAgain.jsp</url-pattern>
            <url-pattern>/home.jsp</url-pattern>
            <url-pattern>/News.jsp</url-pattern>
            <url-pattern>/ContactUs.jsp</url-pattern>
            <url-pattern>/Map.jsp</url-pattern>
            <url-pattern>/AboutUs.jsp</url-pattern>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <!-- END: Footer -->
    
</web-app>
